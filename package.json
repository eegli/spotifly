{
  "name": "@spotifly/repository",
  "version": "0.0.0",
  "private": true,
  "description": "An inofficial toolbelt for Spotify",
  "homepage": "https://spotifly.nougat.dev/",
  "repository": {
    "type": "git",
    "url": "https://github.com/eegli/spotifly"
  },
  "license": "MIT",
  "author": {
    "name": "Eric Egli",
    "email": "lx180777+npm@gmail.com"
  },
  "bin": {
    "spotifly": "packages/cli/bin.js"
  },
  "workspaces": [
    "packages/*",
    "website"
  ],
  "scripts": {
    "build": "preconstruct build",
    "build:release": "yarn build && yarn forallpackages exec rm -rf _release && yarn forallpackages pack && yarn forallpackages exec \"mkdir _release && tar zxvf package.tgz --directory _release && rm package.tgz\"",
    "check-types": "tsc",
    "dev": "preconstruct dev",
    "forallpackages": "yarn workspaces foreach --no-private --verbose",
    "format": "prettier --write packages docs \"**/*.{js,ts,tsx,md}\"",
    "postinstall": "preconstruct dev",
    "lint": "yarn eslint docs packages --ext .ts,.tsx,.js",
    "list-deps": "node scripts/versions.mjs",
    "release": "yarn build:release && changeset publish",
    "sort-packages": "npx --yes sort-package-json \"package.json\" \"packages/*/package.json\" ",
    "status": "changeset status",
    "test": "jest --silent",
    "test:pkg": "jest --selectProjects",
    "watch": "preconstruct watch"
  },
  "resolutions": {
    "minimist": "npm:minimist-lite@2.2.0"
  },
  "dependencies": {
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-typescript": "^7.18.6",
    "@changesets/changelog-git": "^0.1.11",
    "@changesets/cli": "^2.23.2",
    "@preconstruct/cli": "^2.2.0",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.6.0",
    "eslint-plugin-react": "^7.30.1",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "ts-jest": "^28.0.7",
    "tsd": "^0.22.0",
    "typescript": "^4.7.4"
  },
  "packageManager": "yarn@3.2.1",
  "engines": {
    "node": ">=17.3"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
}
